#version 330 core
layout (location = 0) in vec3 aPos; // sets the position variable to 0
layout (location = 1) in vec3 aColour;
out vec3 ourColour; // output a color to the fragment shader

void main()
{
    gl_Position = vec4(aPos, 1.0); // sets the first 3 elements of gl_Position to the 3 elements in aPos
	 ourColour = aColour; // set ourColour to the input color we got from the vertex data
}
